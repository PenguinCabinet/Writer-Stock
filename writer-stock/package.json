{
  "name": "writer-stock",
  "repository":"https://github.com/PenguinCabinet/Writer-Stock",
  "publisher":"PenguinCabinet",
  "displayName": "Writer-Stock",
  "icon": "logo.png",
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "description": "Drawing automatically the graph about the number of written characters by git commits.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git",
    "onCommand:writer-stock.draw"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "writer-stock.draw",
        "title": "Draw the graph the num of chars by git commits."
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "chart.js": "^3.8.0",
    "chartjs-node-canvas": "^4.1.6",
    "gitlog": "^4.0.4"
  }
}
